include ../partials/navbar.pug
doctype html

head
	title Sign-up Page

	style.
		.btn {
		background-color: #3a7b99; /* navy */
		border: none;
		color: white;
		-webkit-transition-duration: 0.4s; /* Safari */
		transition-duration: 0.4s;
		}
		.btn:hover {
		background-color: #3a9958; /* leaves color */
		color: white;
		}

br
br
br

.container
	.row
		.col-md-5.mx-auto
			#first
				.myform.form
					// align logo to center
					.text-center
						img(src='../resources/img/logo.png' class="card-img-top-sm" alt='emblem' height='130' width='130')
						p
						h5(style='font-family:Helvetica; text-align: left;') Create Your Employer Account
				form(action='/signup_employer' method="post")
					.form-group
						label(for='exampleInputEmail1') Full Name
						input#firstname.form-control(type='text' name='firstname' aria-describedby='emailHelp' required='')
					.form-group
						label(for='exampleInputEmail1') Company Name
						input#company.form-control(type='company' name='company' aria-describedby='emailHelp' required='')
					.form-group
						label(for='exampleInputEmail1') Email Address
						input#email.form-control(type='email' name='email' aria-describedby='emailHelp')
					.form-group
						label(for='exampleInputEmail1') Password
						input#password.form-control(type='password' name='password' aria-describedby='emailHelp' required='')
					.form-group
						label(for='exampleInputEmail1') Confirm Password
						input#confirm_password.form-control(type='password' name='confirm_password' aria-describedby='emailHelp' required='')
					script.
						var password = document.getElementById("password"), confirm_password = document.getElementById("confirm_password");
						function validatePassword(){
						if(password.value != confirm_password.value) {
						confirm_password.setCustomValidity("Passwords Don't Match");
						} else {
						confirm_password.setCustomValidity('');
						}
						}
						password.onchange = validatePassword;
						confirm_password.onkeyup = validatePassword;
					.col-md-12.text-center.mb-3
						button.btn.btn-block.mybtn.btn-primary.tx-tfm(type='submit') Sign up
					.col-md-12
						.form-group(style='float:left')
							p.text-center
								a#signin(href='/login' style='color:#3a7b99;') Already have an account?
					.col-md-12
						.form-group(style='float:left')
							p.text-center(style='padding-left: 25px;')
								a#signupstudent(href='/signup_student' style='color:#3a7b99;')  Not an Employer?
footer.page-footer.border-top
	br

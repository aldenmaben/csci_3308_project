//- Signin

//- Default navbar, contains all includes / links
include ../partials/navbar.pug
doctype html

head

	link(href='signin.css' rel='stylesheet')
	style.
		.btn {
		background-color: #3a7b99; /* navy */
		border: none;
		color: white;
		-webkit-transition-duration: 0.4s; /* Safari */
		transition-duration: 0.4s;
		}
		.btn:hover {
		background-color: #3a9958; /* leaves color */
		color: white;
		}

br
br
br

.container
	.row
		.col-md-5.mx-auto
			form.form-signin(action='/signin' method='post')
				.text-center
					img(src='../resources/img/logo.png' alt='emblem' height='130' width='130')
					p
					h1 Please sign in

					label.sr-only(for='inputEmail') Email address
					input#inputEmail.form-control(type='email' placeholder='Email address' name="username" required='' autofocus='')
					label.sr-only(for='inputPassword') Password
					input#inputPassword.form-control(type='password' placeholder='Password' name="password" required='')
					button.btn.btn-block.mybtn.btn-primary.tx-tfm(type='submit') Sign in
				br
				br

				.text-center
					.col-md-24
						p.text-center Don&apos;t have an account? Sign up!
						.btn-group
							button.btn.btn-block.mybtn.btn-primary.tx-tfm(type='button') Register
							button.btn.btn-primary.dropdown-toggle.dropdown-toggle-split(type='button' data-toggle='dropdown')
							.dropdown-menu
								a.dropdown-item(href='/signup_student') Student
								a.dropdown-item(href='/signup_employer') Employer
					p.mt-5.mb-3.text-muted &copy; Arbonsi
					p.mt-2.mb-1.text-muted &copy; Freelancing Opportunities
